{
  "name": "@ideation/backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start:dev": "cross-env NODE_ENV=development dotenv -e .env nodemon --watch './src/**/*' --watch './config/config.yml' --signal SIGTERM --exec tsx ./src/app.ts",
    "start:prod": "cross-env NODE_ENV=production node build/app.js",
    "build:prod": "tsc && npx swc ./src -d build && echo 'Build completed!'",
    "lint": "eslint --cache --cache-location './node_modules/.cache/.eslintcache' --ext .ts .",
    "pmd": "prisma migrate dev --name initial_migration",
    "pgc": "prisma generate",
    "prepare": "yarn pgc && echo 'Prisma client generated!'"
  },
  "prisma": {
    "schema": "./prisma/schema.prisma"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "@trpc/server": "^10.45.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "nodemon": "^3.1.9",
    "yaml": "^2.7.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@swc-node/register": "^1.10.9",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@swc/helpers": "^0.5.15",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lodash": "^4.17.14",
    "@types/node": "^22.10.5",
    "dotenv-cli": "^8.0.0",
    "prisma": "^6.2.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
